import sys
import math

# Function to factorize a number into two smaller numbers
def factorize(number):
    for i in range(2, int(math.sqrt(number)) + 1):
        if number % i == 0:
            return i, number // i
    return None, None

# Check if the script is called with the correct arguments
if len(sys.argv) != 2:
    print("Usage: python factors.py <file>")
    sys.exit(1)

input_file = sys.argv[1]

try:
    with open(input_file, 'r') as file:
        for line in file:
            number = int(line.strip())
            p, q = factorize(number)
            if p is not None and q is not None:
                print("{}={}*{}".format(number, p, q))
except IOError:
    print("File not found or unable to read: {}".format(input_file))
    sys.exit(1)
except ValueError:
    print("Invalid number in the file: {}".format(input_file))
    sys.exit(1)
